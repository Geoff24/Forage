generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id       String  @id @default(auto()) @map("_id") @db.ObjectId
    email    String  @unique
    username String  @unique
    password String
    likes    Like[]
    pantry   Pantry?
}

model Like {
    id     String @id @default(auto()) @map("_id") @db.ObjectId
    user   User   @relation(fields: [userId], references: [id])
    userId String
    apiId  String

    @@unique([userId, apiId])
}

model Ingredient {
    id        String  @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    apiId     String
    pantry    Pantry[] @relation(fields: [pantryIds], references: [id])
    pantryIds String[] @db.ObjectId
}

model Pantry {
    id            String       @id @default(auto()) @map("_id") @db.ObjectId
    user          User         @relation(fields: [userId], references: [id])
    userId        String       @unique @db.ObjectId
    ingredients   Ingredient[] @relation(fields: [ingredientIds], references: [id])
    ingredientIds String[]     @db.ObjectId
}

